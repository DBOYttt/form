# ===========================================
# Authentication System - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/auth_db

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-super-secret-key-change-in-production-min-32-chars

# Session expiry in milliseconds (default: 24 hours)
SESSION_EXPIRY_MS=86400000

# Session token type: 'opaque' (default) or 'jwt'
SESSION_TOKEN_TYPE=opaque

# Maximum concurrent sessions per user (0 = unlimited)
MAX_CONCURRENT_SESSIONS=0

# Session cleanup interval in milliseconds (default: 1 hour)
SESSION_CLEANUP_INTERVAL_MS=3600000

# ===========================================
# JWT Configuration (if using JWT tokens)
# ===========================================
JWT_SECRET=your-jwt-secret-key-change-in-production

# Access token expiry in milliseconds (default: 15 minutes)
ACCESS_TOKEN_EXPIRY_MS=900000

# Refresh token expiry in milliseconds (default: 7 days)
REFRESH_TOKEN_EXPIRY_MS=604800000

# ===========================================
# Email Service (SMTP) Configuration
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com
SMTP_SECURE=false

# ===========================================
# Application Configuration
# ===========================================
APP_URL=http://localhost:3000
APP_NAME=Authentication System
NODE_ENV=development
PORT=3000

# ===========================================
# Token Expiry Settings (in seconds)
# ===========================================
SESSION_EXPIRY=86400
PASSWORD_RESET_EXPIRY=3600
EMAIL_VERIFICATION_EXPIRY=86400

# ===========================================
# Security Settings
# ===========================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins (leave empty for defaults)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
