# ===========================================
# DEVELOPMENT MODE CONFIGURATION
# ===========================================
# ⚠️  WARNING: These settings are NOT for production!
# This configuration enables bypasses and relaxed security
# settings that should NEVER be used in a production environment.
# ===========================================

# Development mode flag - enables all dev features
DEV_MODE=true

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# ===========================================
# Database Configuration
# ===========================================
# For development, use a local PostgreSQL database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# Email Configuration (Mock in dev mode)
# ===========================================
# Skip sending actual emails - log to console instead
SKIP_EMAIL_VERIFICATION=true
MOCK_EMAIL=true

# Optionally save mock emails to files
SAVE_DEV_EMAILS=false
DEV_EMAILS_DIR=./dev-emails

# SMTP settings (not used when MOCK_EMAIL=true)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@localhost

# ===========================================
# Security Configuration (Relaxed for dev)
# ===========================================
# Disable rate limiting for easier testing
DISABLE_RATE_LIMIT=true

# Use fewer bcrypt rounds for faster registration
BCRYPT_ROUNDS=4

# Session settings
SESSION_SECRET=dev-secret-not-for-production-change-me
SESSION_EXPIRY_MS=86400000
SESSION_TOKEN_TYPE=opaque
MAX_CONCURRENT_SESSIONS=0

# JWT settings (if using JWT)
JWT_SECRET=dev-jwt-secret-not-for-production

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Token Expiry (longer for dev convenience)
# ===========================================
VERIFICATION_TOKEN_EXPIRY_HOURS=168
PASSWORD_RESET_EXPIRY=86400

# ===========================================
# CORS Configuration
# ===========================================
# In dev mode, all origins are allowed automatically
# This is only used if relaxed security is disabled
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
